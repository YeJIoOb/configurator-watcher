{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": false,
      "sourceMap": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata" :true,
      "allowJs": false,
      "declaration": true,
      "outDir": "./lib/",
      "rootDir": "./src/"
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "test/**/*.ts",
    "**/*.spec.ts",
    "./lib/**/*"
  ]
}